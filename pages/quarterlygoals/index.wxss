.tabbar {
  margin: 30rpx 0;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.tabbar .tab {
  width: 120rpx;
  height: 50rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #219d9c;
}
.tabbar .on {
  color: #f00;
}
.table {
  border: 20rpx solid #00cccc;
  font-size: 22rpx;
  color: #219d9c;
}
.table-title {
  height: 30rpx;
  background: #009999;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.table .th {
  height: 60rpx;
  display: flex;
}
.table .th .td {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border: 1rpx solid #a6a6a6;
}
.table .th .td:nth-child(n+2) {
  border-left: 0rpx;
}
.table .th .td:last-child {
  flex: .5;
}
.table .tr {
  display: flex;
}
.table .tr .td1 {
  flex: 1;
  border: 1rpx solid #a6a6a6;
  border-top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.table .tr .td2 {
  flex: 3.5;
}
.table .tr .td2 .td3 {
  display: flex;
  height: 80rpx;
}
.table .tr .td2 .td3-son {
  flex: 1;
  border: 1rpx solid #a6a6a6;
  border-top: 0rpx;
  border-left: 0rpx;
}
.table .tr .td2 .td3-son:last-child {
  flex: .5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.table .tr .td2 .td3-son input {
  height: 100%;
  width: 100%;
  text-align: center;
}
.table .tr .td2 .td3-son textarea {
  width: 100%;
  height: 100%;
  text-align: center;
}
.table .tr .td2 .td3-son .ps {
  color: #219d9c;
}
.quarter {
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.unfinished-part {
  height: 70rpx;
  border: 1rpx solid #a6a6a6;
}
.unfinished-part textarea {
  width: 100%;
  height: 100%;
  text-align: center;
}
.reason {
  display: flex;
  height: 70rpx;
  border-bottom: 1rpx solid #a6a6a6;
}
.reason text {
  display: flex;
  justify-content: center;
  align-items: center;
}
.reason textarea {
  margin-left: 30rpx;
  flex: 1;
  height: 100%;
  text-align: center;
}
