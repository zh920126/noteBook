page {
  background: #EFF3F6;
}
.head {
  background: #fff;
  height: 50rpx;
  box-sizing: border-box;
  padding: 7rpx;
}
.tabbar {
  margin: auto;
  width: 378rpx;
  height: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8F8F8;
  border-radius: 5rpx;
  overflow: hidden;
}
.tabbar .tab {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 15rpx;
  color: #404040;
}
.tabbar .tab:nth-child(2) {
  background: #fff;
  color: #2ECE94;
}
.tabbar .tab:nth-child(2) picker {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.table {
  border: 1rpx solid #1C5E55;
  margin: 0 14rpx;
  color: #219d9c;
  background: #fff;
}
.table .th {
  height: 40rpx;
  display: flex;
  background: #22705D;
  font-size: 13rpx;
  color: #fff;
  font-weight: bold;
}
.table .th .td {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid #1C5E55;
  border-left: 1rpx solid #1C5E55;
}
.table .th .td:first-child {
  width: 72rpx;
}
.table .th .td:nth-child(2) {
  width: 72rpx;
}
.table .th .td:nth-child(3),
.table .th .td:nth-child(4) {
  flex: 1;
}
.table .th .td:last-child {
  width: 36rpx;
}
.table .tr {
  display: flex;
}
.table .tr:last-child .aa:last-child .td3-son {
  border-bottom: 0rpx;
}
.table .tr .td1 {
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #1C5E55;
  background: #22705D;
  writing-mode: vertical-lr;
  width: 72rpx;
  box-sizing: border-box;
  font-size: 13rpx;
  color: #fff;
  font-weight: bold;
}
.table .tr .td2 {
  flex: 1;
}
.table .tr .td2 .td3 {
  display: flex;
  height: 108rpx;
}
.table .tr .td2 .td3-son {
  box-sizing: border-box;
  border-bottom: 1rpx solid #1C5E55;
  border-left: 1rpx solid #1C5E55;
}
.table .tr .td2 .td3-son:first-child {
  width: 72rpx;
  font-size: 12rpx;
  color: #1C5E55;
}
.table .tr .td2 .td3-son:nth-child(2),
.table .tr .td2 .td3-son:nth-child(3) {
  flex: 1;
}
.table .tr .td2 .td3-son:nth-child(3) textarea {
  border-left: 1rpx solid #1C5E55;
}
.table .tr .td2 .td3-son:last-child {
  width: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.table .tr .td2 .td3-son input {
  height: 100%;
  width: 100%;
  text-align: center;
}
.table .tr .td2 .td3-son textarea {
  width: 100%;
  height: 100%;
  text-align: center;
}
.box {
  margin: 17rpx 14rpx 0;
  border: 1rpx solid #1C5E55;
}
.quarter {
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #22705D;
  font-size: 13rpx;
  color: #fff;
  font-weight: bold;
}
.unfinished-part {
  height: 154rpx;
  border-top: 1rpx solid #1C5E55;
  border-bottom: 1rpx solid #1C5E55;
}
.reason {
  display: flex;
  height: 154rpx;
}
.reason:last-child text,
.reason:last-child textarea {
  border-bottom: 0rpx;
}
.reason text {
  width: 144rpx;
  padding: 0 6rpx ;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #1C5E55;
  font-size: 15rpx;
  color: #1C5E55;
}
.reason textarea {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  border-bottom: 1rpx solid #1C5E55;
  border-left: 1rpx solid #1C5E55;
}
