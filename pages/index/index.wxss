.index {
  color: #219d9c;
  font-size: 22rpx;
  background: #EFF3F6;
  height: 100vh;
}
.index-top {
  height: 271rpx;
  width: 100%;
  overflow: hidden;
  background: #257065;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  position: relative;
}
.index-top .img {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  height: 391rpx;
  width: 300rpx;
}
.index-top .img image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 80rpx;
  right: -20rpx;
}
.index-header {
  width: 190rpx;
  height: 30rpx;
  margin: 14rpx 0 0 ;
}
.index-title {
  width: 302rpx;
  height: 60rpx;
  font-size: 43rpx;
  margin-top: 8rpx;
  font-weight: bold;
}
.index .card {
  position: relative;
  width: 476rpx;
  height: 615rpx;
  margin: -124rpx auto 0;
  z-index: 2;
  border-radius: 7rpx;
  border-bottom: 16rpx solid #5FAE89;
  box-sizing: border-box;
  box-shadow: 0px 5rpx 11rpx rgba(0, 0, 0, 0.16);
  overflow: hidden;
}
.index .card .bg {
  height: 197rpx;
  background: #5fae89;
}
.index .card .bg .userAvatar {
  width: 157rpx;
  height: 203rpx;
  position: absolute;
  background: #fff;
  top: 52rpx;
  left: 50%;
  border-radius: 7rpx;
  overflow: hidden;
  transform: translate(-50%);
  writing-mode: vertical-lr;
}
.index .card .bg .userAvatar button {
  width: 100%;
  height: 100%;
  color: #5FAE89;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .card .bg image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 157rpx;
}
.index .btns {
  width: 200rpx;
  height: 280rpx;
  margin: 60rpx auto;
  border: 1rpx dashed #000;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.index .btns button {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  background: rgba(255, 255, 255, 0);
  font-size: 28rpx;
  font-weight: normal;
  color: inherit;
}
.index .userInfo {
  margin-top: 93rpx;
  margin-left: 47rpx;
  font-size: 14rpx;
  color: #AFB5B3;
}
.index .userInfo > view {
  display: flex;
  margin-bottom: 27rpx;
  align-items: center;
}
.index .userInfo .item > view:first-child {
  width: 30rpx;
}
.index .userInfo .item > view:last-child {
  margin-left: 11rpx;
  font-size: 22rpx;
  color: #257065;
}
.index .userInfo .user-name {
  display: flex;
}
.index .userInfo .user-name > view {
  display: flex;
}
.index .userInfo .user-name > view > view {
  display: flex;
  align-items: center;
}
.index .userInfo .user-name > view > view:last-child {
  margin-left: 11rpx;
  width: 150rpx;
  font-size: 22rpx;
  color: #257065;
}
.index .userInfo .item-qq {
  display: flex;
}
.index .userInfo .item-qq .qq,
.index .userInfo .item-qq .wechat {
  display: flex;
}
.index .userInfo .item-qq .qq > view image,
.index .userInfo .item-qq .wechat > view image {
  width: 100%;
}
.index .userInfo .item-qq .qq > view:first-child,
.index .userInfo .item-qq .wechat > view:first-child {
  font-size: 30rpx;
  width: 30rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  color: #93D8AA;
}
.index .userInfo .item-qq .qq > view:last-child,
.index .userInfo .item-qq .wechat > view:last-child {
  margin-left: 11rpx;
  width: 150rpx;
  font-size: 22rpx;
  color: #257065;
  display: flex;
  flex-wrap: wrap;
}
.index .userInfo .email {
  display: flex;
}
.index .userInfo .email > view:first-child {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  color: #93D8AA;
}
.index .userInfo .email > view:last-child {
  margin-left: 11rpx;
  font-size: 22rpx;
  color: #257065;
  display: flex;
  flex-wrap: wrap;
}
.index .user-dream {
  display: flex;
  height: 66rpx;
  margin: 73rpx 49rpx 0;
  justify-content: space-between;
}
.index .user-dream-item {
  width: 130rpx;
  background: #2bc24e;
  border-radius: 7rpx;
  box-shadow: 0rpx 10rpx 10rpx rgba(43, 194, 78, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: bold;
}
.index .user-dream-item:nth-child(2) {
  background: #81cf45;
  box-shadow: 0rpx 10rpx 10rpx rgba(129, 207, 69, 0.5);
}
.index .user-dream-item:nth-child(3) {
  background: #2bc2bd;
  box-shadow: 0rpx 10rpx 10rpx rgba(43, 194, 189, 0.5);
}
.index .user-dream-item:nth-child(4) {
  background: #2e9cef;
  box-shadow: 0rpx 10rpx 10rpx rgba(46, 156, 239, 0.5);
}
